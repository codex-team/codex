
body {
    background: #131416;
}
.site-footer, .site-header {
    background: #131416;
}

.site-header__social,
.site-header__github-icon {
    display: none !important;
}

/**
 * Site style overrides
 */
.site-header,
.site-footer {
    border-color: #181616;
    color: #333;
}

.site-header a {
    color: #fff;
}
.site-footer a {
    color: #595A5C;
}

.site-footer h5 {
    color: #bbb;
}

.site-footer .desclimer {
    color: inherit;
}

h2 {
    font-size: 40px;
    margin-top: 130px;
}

.lab-page {
    background-color: #131416;
    color: #ffffff;

    font-size: 16px;
    line-height: 25px;
    letter-spacing: 0.18px;
    font-weight: 300;

    &__intro-block {
        display: flex;
        flex-direction: column;
        align-items: center;

        max-width: 600px;
        margin: 0 auto;

        &-header {
            margin-top: 369px;
            margin-bottom: 0;
            line-height: 1em;
            font-size: 110px;
            letter-spacing: -1.21px;
            color: #ffffff;
        }

        &-description {
            margin-top: 5px;
            font-size: 20px;
            letter-spacing: -0.22px;
            color: #787878;
        }

        &-anthem {
            margin-top: 50px;
            margin-bottom: 192px;
            letter-spacing: -0.22px;
            line-height: 1.4;
            letter-spacing: -0.22px;
            font-size: 20px;
        }
    }

    &__banner-pic {
        width: 100%;
        height: 520px;
        background-image: url('https://codex.so/upload/redactor_images/o_9fe12a632b1dbe4e13d4561865dfb7fe.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        padding: 0;
    }

    &__description {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;

        max-width: 600px;
        margin: 100px auto 0 auto;

        &-text {
            width: 371px;
        }

        &-pic {
            width: 151px;
            height: 150px;
            background-image: url('/public/app/img/codex-logo.svg');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center center;
            padding: 0;
        }
    }

    &__directions {
        max-width: 600px;
        margin: 0 auto;

        &-title {

        }

        &-description {
            margin-top: 40px;
        }

        & ul {
            margin-top: 50px;
            list-style-type: none;
            padding: 0;
        }

        & li {
            font-size: 24px;
            line-height: 40px;
        }
    }

    &__cycle {
        max-width: 600px;
        margin: 0 auto;

        &-title {

        }

        &-description {
            margin-top: 40px;

        }

        &-list {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-top: 50px;

            &-items {
                max-height: 378px;

                &-polygon {
                    position: relative;
                    width: 61px;
                    height: 118px;
                    background-image: url('/public/app/landings/lab/assets/rectangle.svg');
                    background-size: cover;
                    background-repeat: no-repeat;
                    background-position: center center;
                    padding: 0;
                    margin: 0;

                    @for $i from 0 to 14 {
                        &--$i {
                            top: calc(-95px * $(i) - 13px);
                            left: calc(28px * $(i));
                        }
                    }
                }

            }

            & ul {
                list-style-type: none;
                padding: 0;
            }

            & li {
                font-size: 12px;
            }
        }
    }

    &__roles {
        max-width: 600px;
        margin: 0 auto;

        &-title {

        }

        &-description {

        }

        &-list {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-top: 50px;

            &-items {
                max-height: 378px;

                &-star {
                    position: relative;
                    width: 39px;
                    height: 39px;
                    background-image: url('/public/app/landings/lab/assets/star.svg');
                    background-size: cover;
                    background-repeat: no-repeat;
                    background-position: center center;
                    padding: 0;
                    margin: 0;

                    @for $i from 0 to 16 {
                        &--$i {
                            top: calc(-39px * $(i) + 180px);
                            left: calc(180px);
                            transform: rotate(calc($(i) * (360 / 17))deg)
                                       translateY(-180px)
                                       rotate(calc(-$(i) * (360 / 17))deg);
                        }
                    }
                }

            }

            & ul {
                list-style-type: none;
                padding: 0;
            }

            & li {
                font-size: 12px;
            }
        }
    }

    &__about {
        max-width: 600px;
        margin: 0 auto;

        &-title {

        }

        &-description {
            font-size: 16px;
            letter-spacing: -0.32px;
        }

        &-icons {
            margin-top: 35px;
            display: flex;
            justify-content: flex-start;
            align-items: center;

            &-item {
                display: inline-block;
                width: 34px;
                height: 34px;
                background-size: cover;
                background-repeat: no-repeat;
                background-position: center center;
                padding: 0;
                margin: 0;

                &:not(:last-of-type) {
                    margin-right: 30px;
                }

                &--instagram {
                    background-image: url('/public/app/landings/lab/assets/icons/instagram.svg');
                }

                &--vk {
                    background-image: url('/public/app/landings/lab/assets/icons/vk.svg');
                }

                &--twitter {
                    height: 28px;
                    background-image: url('/public/app/landings/lab/assets/icons/twitter.svg');
                }

                &--telegram {
                    background-image: url('/public/app/landings/lab/assets/icons/telegram.svg');
                }

                &--github {
                    background-image: url('/public/app/landings/lab/assets/icons/github.svg');
                }

                &--npm {
                    background-image: url('/public/app/landings/lab/assets/icons/npm.svg');
                }
            }
        }
    }

    &__partners {
        max-width: 600px;
        margin: 0 auto;

        &-title {

        }

        &-list {
            margin-top: 40px;

            &-row {
                display: flex;
                justify-content: space-between;
                align-items: center;

                &:not(:first-of-type) {
                    margin-top: 50px;
                }
            }
        }

        &-item {
            &--faculty {
                width: 200px;
                height: 77px;
                background-image: url('/public/app/landings/lab/assets/faculty-of-secure-information-technologies.svg');
                background-size: cover;
                background-repeat: no-repeat;
                background-position: center center;
                padding: 0;
            }

            &--itmo {
                width: 278px;
                height: 34px;
                background-image: url('/public/app/landings/lab/assets/itmo-logo.svg');
                background-size: cover;
                background-repeat: no-repeat;
                background-position: center center;
                padding: 0;
            }

            &--isac {
                &-title {
                    color: #a0a1a1;
                    margin-bottom: 7px;
                }

                &-name {}
            }

            &--mail {}
        }
    }

    &__form {
        max-width: 600px;
        margin: 0 auto;

        &-title {
            margin-bottom: 40px;

        }

        &-body {

            margin-bottom: 50px;

            & label {
                margin: 26px 0 10px 12px;
                display: block;
            }

            & textarea {
                width: 407px;
                background-color: rgba(255, 255, 255, 0.08);
                height: 112px;
                box-sizing: border-box;
                border-radius: 10px;
                border: 0;
                font-family: inherit;
                outline: none;
                resize: none;
                color: #fff;
                padding: 12px;
            }

            & button {
                width: 407px;
                background-color: #3a8df5;
                margin-top: 26px;
                padding: 15px 146px 15px 147px;
                border-radius: 10px;
                color: #fff;
                border: 0;

                &:hover {
                    cursor: pointer;
                    background-color: #3183EB;
                }

                &:active {
                    background-color: #3277cf;
                }
            }
        }
    }

    &__telegram-auth-button {
        text-align: center;
    }
}
